  pinMode(pos, OUTPUT);
  pinMode(pos2, OUTPUT);
  pinMode(pos3, OUTPUT);
  pinMode(pos4, OUTPUT);
  pinMode(pos5, OUTPUT);
  pinMode(pos6, OUTPUT);
  pinMode(pos7, OUTPUT);  
  pinMode(pos8, OUTPUT);
  pinMode(pos9, OUTPUT);  
  pinMode(neg, OUTPUT);
  pinMode(neg2, OUTPUT);
  pinMode(neg3, OUTPUT);
}

